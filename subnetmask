      font-family: sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      margin: 0;
    }
    .rettangolo {
      background-color: #3a3a3a;
      border-radius: 12px;
      padding: 20px 30px;
      margin: 20px;
      text-align: center;
      box-shadow: 0 0 10px rgba(0,0,0,0.5);
      width: 800px;
    }
    h2 {
      font-weight: bold;
      color: #ffffff;
    }
    input {
      padding: 8px;
      margin: 5px;
      border-radius: 6px;
      border: none;
      outline: none;
      text-align: center;
      width: 100px;
    }
    button {
      padding: 8px 16px;
      margin-top: 10px;
      border: none;
      border-radius: 6px;
      background-color: #a9a9a9;
      color: white;
      font-weight: bold;
      cursor: pointer;
    }
    button:hover {
      background-color: #87cefa;
    }
    #risultatoMultiplo, #subnetMask {
      margin-top: 20px;
      font-weight: bold;
    }
